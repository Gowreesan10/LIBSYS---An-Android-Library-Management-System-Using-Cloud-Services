<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/linearGroup"
        style="@style/groupStylewhite_A700"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2pxh"
        android:elevation="4dp"
        android:gravity="start"
        android:orientation="vertical"
        app:cardPreventCornerOverlap="true">

        <LinearLayout
            android:id="@+id/linearGroup7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bookCover"
                android:layout_width="@dimen/_55pxh"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_12pxv"
                android:layout_marginTop="@dimen/_5pxv"
                android:layout_marginBottom="@dimen/_3pxv"
                android:src="@drawable/ic_launcher_background"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:id="@+id/linearGroup6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_10pxv"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_weight="0.8"
                android:orientation="vertical"
                android:paddingTop="@dimen/_3pxv"
                android:paddingBottom="@dimen/_5pxh">

                <TextView
                    android:id="@+id/Book_Name"
                    style="@style/txtPoppinsmedium14"
                    android:textSize="@dimen/_15pxh"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_36pxh"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="JAVS ERDF GGGGH BBNNNMJJMM" />

                <LinearLayout
                    android:id="@+id/linearRowunlimitedannuaOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtUnlimitedannuaOne"
                        style="@style/txtInterregular12"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:ellipsize="end"
                        android:lineSpacingExtra="@dimen/_1pxh"
                        android:singleLine="true"
                        android:text="Issued Copy No   :" />

                    <TextView
                        android:id="@+id/copynoenter"
                        style="@style/txtInterregular12"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:ellipsize="end"
                        android:lineSpacingExtra="@dimen/_5pxh"
                        android:singleLine="false"
                        android:text="33" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/borrowedDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/borrowd"
                        style="@style/txtInterregular12"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:ellipsize="end"
                        android:lineSpacingExtra="@dimen/_1pxh"
                        android:singleLine="true"
                        android:text="Borrower               :" />

                    <TextView
                        android:id="@+id/borrowerenter"
                        style="@style/txtInterregular12"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:ellipsize="end"
                        android:lineSpacingExtra="@dimen/_5pxh"
                        android:singleLine="false"
                        android:text="Jinushan" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Remainingtime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/remaintime"
                        style="@style/txtInterregular12"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:ellipsize="end"
                        android:lineSpacingExtra="@dimen/_1pxh"
                        android:singleLine="true"
                        android:text="Issued time          :" />

                    <TextView
                        android:id="@+id/issuedtimeenter"
                        style="@style/txtInterregular12"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:ellipsize="end"
                        android:lineSpacingExtra="@dimen/_5pxh"
                        android:singleLine="false"
                        android:text="2022.10.22" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>
