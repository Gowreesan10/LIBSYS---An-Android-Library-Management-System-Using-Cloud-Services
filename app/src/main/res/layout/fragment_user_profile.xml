<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/linearSettingspagel"
        style="@style/groupStylegray_100"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#5CB3FF"
            app:cardCornerRadius="0dp">

            <LinearLayout
                android:id="@+id/linearGroup4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15pxh"
                android:layout_marginTop="@dimen/_22pxv"
                android:layout_marginEnd="@dimen/_15pxh"
                android:layout_marginBottom="@dimen/_23pxv"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageEllipse11"
                    android:layout_width="@dimen/_100pxh"
                    android:layout_height="@dimen/_100pxh"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/img_prolile"
                    app:civ_border_color="@color/teal_200"
                    app:civ_border_width="@dimen/_3pxh"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:id="@+id/linearGroup3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_44pxh"
                    android:layout_marginEnd="@dimen/_21pxh"
                    android:layout_marginBottom="@dimen/_4pxv"
                    android:layout_weight="0.64"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtAlfaRoni"
                        style="@style/txtPoppinsbold22"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_5pxh"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Gowreeshan" />

                    <LinearLayout
                        android:id="@+id/linearPlace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_18pxv"
                        android:layout_marginEnd="@dimen/_10pxh"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageMappin"
                            android:layout_width="@dimen/_15pxh"
                            android:layout_height="@dimen/_15pxh"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_mappin"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/txtMalang"
                            style="@style/txtPoppinssemibold12"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5pxh"
                            android:layout_weight="0.78"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="Vavuniya" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_11pxv"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageClock"
                            android:layout_width="@dimen/_15pxh"
                            android:layout_height="@dimen/_15pxh"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_clock_black"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/txtBornNovember2"
                            style="@style/txtPoppinssemibold12"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5pxh"
                            android:layout_weight="0.93"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="Born on november 4" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <View
            android:id="@+id/lineLine1"
            android:layout_width="@dimen/_340pxh"
            android:layout_height="@dimen/_1pxv"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/_10pxh"
            android:layout_marginEnd="@dimen/_10pxh"
            android:background="@color/gray_300" />

        <LinearLayout
            android:id="@+id/linearFrame32"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15pxh"
            android:layout_marginTop="@dimen/_23pxv"
            android:layout_marginEnd="@dimen/_15pxh"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtAccountSetting"
                style="@style/txtPoppinsmedium16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/msg_account_setting"
                tools:text="@string/msg_account_setting" />

            <LinearLayout
                android:id="@+id/linearFrame31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20pxv"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtEditProfile"
                    style="@style/txtPoppinsmedium14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_weight="0.9"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/lbl_edit_profile"
                    tools:text="@string/lbl_edit_profile" />

                <ImageView
                    android:id="@+id/imageGroup14"
                    android:layout_width="@dimen/_23pxh"
                    android:layout_height="@dimen/_23pxh"
                    android:layout_marginEnd="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_arrowright"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearFrame30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20pxv"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtChangePassword"
                    style="@style/txtPoppinsmedium14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_weight="0.9"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/lbl_change_password"
                    tools:text="@string/lbl_change_password" />

                <ImageView
                    android:id="@+id/imageGroup15"
                    android:layout_width="@dimen/_23pxh"
                    android:layout_height="@dimen/_23pxh"
                    android:layout_marginEnd="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_arrowright"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearFrame29"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20pxv"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtAddAPaymentM"
                    style="@style/txtPoppinsmedium14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_weight="0.92"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/msg_add_a_payment_m"
                    tools:text="@string/msg_add_a_payment_m" />

                <ImageView
                    android:id="@+id/imageGroup19"
                    android:layout_width="@dimen/_23pxh"
                    android:layout_height="@dimen/_23pxh"
                    android:layout_marginEnd="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_arrowright"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/lineLine2"
            android:layout_width="@dimen/_340pxh"
            android:layout_height="@dimen/_1pxv"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_35pxv"
            android:layout_marginEnd="@dimen/_10pxh"
            android:background="@color/gray_300" />

        <LinearLayout
            android:id="@+id/linearFrame33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15pxh"
            android:layout_marginTop="@dimen/_17pxv"
            android:layout_marginEnd="@dimen/_15pxh"
            android:layout_marginBottom="@dimen/_93pxv"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtMore"
                style="@style/txtPoppinsmedium16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/lbl_more"
                tools:text="@string/lbl_more" />

            <LinearLayout
                android:id="@+id/linearFrame25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20pxv"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtAboutUs"
                    style="@style/txtPoppinsmedium14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_weight="0.78"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/lbl_about_us"
                    tools:text="@string/lbl_about_us" />

                <ImageView
                    android:id="@+id/imageGroup22"
                    android:layout_width="@dimen/_23pxh"
                    android:layout_height="@dimen/_23pxh"
                    android:layout_marginEnd="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_arrowright"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearFrame24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20pxv"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtPrivacyPolicy"
                    style="@style/txtPoppinsmedium14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_weight="0.85"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/lbl_privacy_policy"
                    tools:text="@string/lbl_privacy_policy" />

                <ImageView
                    android:id="@+id/imageGroup23"
                    android:layout_width="@dimen/_23pxh"
                    android:layout_height="@dimen/_23pxh"
                    android:layout_marginEnd="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_arrowright"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearFrame26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_19pxv"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtTermsAndCondi"
                    style="@style/txtPoppinsmedium14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_weight="0.9"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/msg_terms_and_condi"
                    tools:text="@string/msg_terms_and_condi" />

                <ImageView
                    android:id="@+id/imageGroup24"
                    android:layout_width="@dimen/_23pxh"
                    android:layout_height="@dimen/_23pxh"
                    android:layout_marginEnd="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_arrowright"
                    tools:ignore="ContentDescription" />
            </LinearLayout>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rectangle_bg_red_a400_radius_16"
            android:paddingStart="@dimen/_5pxh"
            android:paddingEnd="@dimen/_5pxh"
            android:text="Logout"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_16pxv" />
    </LinearLayout>
</layout>
