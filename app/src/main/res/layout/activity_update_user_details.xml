<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/linearUser"
        style="@style/groupStylewhite_A700"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageGroup2"
            android:layout_width="@dimen/_30pxh"
            android:layout_height="@dimen/_30pxh"
            android:layout_marginStart="@dimen/_12pxh"
            android:layout_marginTop="@dimen/_10pxv"
            android:layout_marginEnd="@dimen/_12pxh"
            android:scaleType="fitXY"
            android:src="@drawable/img_group2"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/txtUpdateDetails"
            style="@style/txtPoppinssemibold24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_24pxh"
            android:layout_marginEnd="@dimen/_24pxh"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/lbl_update_details"
            tools:text="@string/lbl_update_details" />

        <TextView
            android:id="@+id/txtPleaseEnterYo"
            style="@style/txtPoppinsregular14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_24pxh"
            android:layout_marginTop="@dimen/_4pxv"
            android:layout_marginEnd="@dimen/_24pxh"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/msg_please_enter_yo"
            tools:text="@string/msg_please_enter_yo" />

        <LinearLayout
            android:id="@+id/linearProlile"
            style="@style/groupStyleblue_A700_66cornerRadius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/_12pxh"
            android:layout_marginTop="@dimen/_23pxv"
            android:layout_marginEnd="@dimen/_12pxh"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageProlile"
                android:layout_width="@dimen/_134pxh"
                android:layout_height="@dimen/_134pxh"
                tools:ignore="ContentDescription"
                tools:src="@drawable/image_not_found" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSelectProfile"
            style="@style/btnSolidRounded"
            android:layout_width="@dimen/_127pxh"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/_12pxh"
            android:layout_marginTop="@dimen/_9pxv"
            android:layout_marginEnd="@dimen/_12pxh"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/msg_select_profile"
            android:textAllCaps="false"
            tools:text="@string/msg_select_profile" />

        <EditText
            android:id="@+id/userName"
            style="@style/etSolidRoundedOutline_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_17pxh"
            android:layout_marginTop="@dimen/_23pxv"
            android:layout_marginEnd="@dimen/_16pxh"
            android:background="@drawable/rectangle_bg_black_900_border_gray_900_radius_16"
            android:ellipsize="end"
            android:hint="@string/enter_your_name"
            android:inputType="text"
            android:paddingStart="@dimen/_20pxh"
            android:paddingTop="@dimen/_22pxv"
            android:paddingBottom="@dimen/_22pxv"
            android:singleLine="true"
            android:textColorHint="@color/bluegray_400"
            tools:ignore="Autofill" />

        <LinearLayout
            android:id="@+id/linearGroup100000079"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_17pxh"
            android:layout_marginTop="@dimen/_25pxv"
            android:layout_marginEnd="@dimen/_12pxh"
            android:gravity="start"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtAddress"
                style="@style/etSolidRoundedOutline_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.72"
                android:background="@drawable/rectangle_bg_black_900_border_gray_900_radius_16"
                android:paddingStart="@dimen/_14pxh"
                android:paddingTop="@dimen/_22pxv"
                android:paddingBottom="@dimen/_22pxv"
                android:hint="Location Not Selected"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnChooseLocation"
                style="@style/btnSolidRounded"
                android:layout_width="@dimen/_90pxh"
                android:layout_height="@dimen/_48pxv"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_8pxh"
                android:layout_marginTop="@dimen/_6pxv"
                android:layout_marginBottom="@dimen/_6pxv"
                android:ellipsize="end"
                android:singleLine="false"
                android:text="Set Location"
                android:textAllCaps="false" />
        </LinearLayout>

        <EditText
            android:id="@+id/etAge"
            style="@style/etSolidRoundedOutline_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_marginTop="@dimen/_25pxv"
            android:layout_marginEnd="@dimen/_16pxh"
            android:background="@drawable/rectangle_bg_black_900_border_gray_900_radius_16"
            android:ellipsize="end"
            android:hint="@string/lbl_age"
            android:inputType="text"
            android:paddingStart="@dimen/_20pxh"
            android:paddingTop="@dimen/_22pxv"
            android:paddingBottom="@dimen/_22pxv"
            android:singleLine="true"
            android:textColorHint="@color/bluegray_400"
            tools:ignore="Autofill" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnUpdate"
            style="@style/btnSolidRounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12pxh"
            android:layout_marginTop="@dimen/_90pxv"
            android:layout_marginEnd="@dimen/_12pxh"
            android:layout_marginBottom="@dimen/_20pxv"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_16pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingBottom="@dimen/_16pxv"
            android:singleLine="true"
            android:text="@string/lbl_update"
            android:textAllCaps="false"
            tools:text="@string/lbl_update" />
    </LinearLayout>
</layout>
