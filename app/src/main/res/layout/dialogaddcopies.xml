<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:id="@+id/linearColumncancel"
        style="@style/groupStylewhite_A700"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearColumnlabelvalue"
            style="@style/groupStylewhite_A700cornerRadius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5pxh"
            android:layout_marginTop="@dimen/_10pxv"
            android:layout_marginEnd="@dimen/_5pxh"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtLabelvalue"
                style="@style/txtPoppinssemibold14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_9pxh"
                android:layout_marginTop="@dimen/_17pxv"
                android:layout_marginEnd="@dimen/_10pxh"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Book Details" />

            <LinearLayout
                android:id="@+id/linearRowlanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_17pxv"
                android:layout_marginEnd="@dimen/_10pxh"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtLanguage"
                    style="@style/txtPoppinsregular13"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_weight="0.5"
                    android:ellipsize="end"
                    android:letterSpacing="0.01"
                    android:singleLine="true"
                    android:text="Book" />

                <TextView
                    android:id="@+id/txtJinu"
                    style="@style/txtPoppinslight13"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_weight="0.5"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:lineSpacingExtra="@dimen/_1pxh"
                    android:singleLine="true"
                    android:text="Jinu" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearRowlibrary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_9pxh"
                android:layout_marginTop="@dimen/_9pxv"
                android:layout_marginEnd="@dimen/_9pxh"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtLibrary"
                    style="@style/txtPoppinsregular13"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_weight="0.5"
                    android:ellipsize="end"
                    android:letterSpacing="0.01"
                    android:singleLine="true"
                    android:text="Library" />

                <TextView
                    android:id="@+id/txtGroupDiscussio"
                    style="@style/txtPoppinslight13"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_2pxv"
                    android:layout_weight="0.5"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:lineSpacingExtra="@dimen/_1pxh"
                    android:singleLine="true"
                    android:text="lib06" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearRowinitialamount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_9pxh"
                android:layout_marginTop="@dimen/_7pxv"
                android:layout_marginEnd="@dimen/_9pxh"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtInitialAmount"
                    style="@style/txtPoppinsregular13"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:letterSpacing="0.01"
                    android:text="Initial Total copies" />

                <TextView
                    android:id="@+id/txt1022"
                    style="@style/txtPoppinslight13"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_14pxv"
                    android:layout_weight="0.5"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:lineSpacingExtra="@dimen/_1pxh"
                    android:singleLine="true"
                    android:text="10" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtLanguageOne"
                style="@style/txtPoppinsregular14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_9pxh"
                android:layout_marginTop="@dimen/_14pxv"
                android:layout_marginEnd="@dimen/_10pxh"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Enter No of Copies" />

            <EditText
                android:id="@+id/etInput"
                style="@style/etSolidRoundedOutline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_9pxh"
                android:layout_marginTop="@dimen/_4pxv"
                android:layout_marginEnd="@dimen/_9pxh"
                android:ellipsize="end"
                android:hint="Enter No of Copies"
                android:inputType="number"
                android:paddingStart="@dimen/_16pxh"
                android:paddingTop="@dimen/_13pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingBottom="@dimen/_9pxv"
                android:singleLine="true"
                android:textColorHint="@color/gray_900" />

            <LinearLayout
                android:id="@+id/linearRowtotalcopies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_9pxh"
                android:layout_marginTop="@dimen/_12pxv"
                android:layout_marginEnd="@dimen/_9pxh"
                android:layout_marginBottom="@dimen/_15pxv"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtTotalCopies"
                    style="@style/txtPoppinsregular13"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:ellipsize="end"
                    android:letterSpacing="0.01"
                    android:singleLine="true"
                    android:text="Total Copies" />

                <TextView
                    android:id="@+id/txt1022One"
                    style="@style/txtPoppinslight13"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_4pxv"
                    android:layout_weight="0.5"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:lineSpacingExtra="@dimen/_1pxh"
                    android:singleLine="true"
                    android:text="12" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearRowcancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_7pxh"
            android:layout_marginTop="@dimen/_15pxv"
            android:layout_marginEnd="@dimen/_7pxh"
            android:layout_marginBottom="@dimen/_15pxv"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCancel"
                style="@style/btnSolidRounded"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_12pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingBottom="@dimen/_12pxv"
                android:singleLine="true"
                android:text="Cancel"
                android:textAllCaps="false" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAddCopies"
                style="@style/btnSolidRounded"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_6pxh"
                android:layout_marginEnd="@dimen/_1pxh"
                android:layout_weight="0.5"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_12pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingBottom="@dimen/_12pxv"
                android:singleLine="true"
                android:text="Add Copies"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>
</layout>
