<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_3pxh"
        app:cardCornerRadius="@dimen/_10pxh"
        app:contentPadding="@dimen/_5pxh">

        <LinearLayout
            android:id="@+id/linearProfileAddre"
            style="@style/groupStylewhite_A700"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10pxh"
            android:layout_marginEnd="@dimen/_10pxh"
            android:gravity="start"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_5pxh">

            <TextView
                android:id="@+id/txtCopyCounter"
                style="@style/txtInterregular12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_3pxv"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Copy" />


            <LinearLayout
                android:id="@+id/linearRowaddressone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_1pxh"
                android:layout_marginTop="@dimen/_3pxv"
                android:layout_marginEnd="@dimen/_1pxh"
                android:gravity="start"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtAddressOne"
                    style="@style/txtInterregular12"
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_weight="0.5"
                    android:ellipsize="end"
                    android:letterSpacing="0.02"
                    android:lineSpacingExtra="@dimen/_1pxh"
                    android:singleLine="true"
                    android:text="Borrower" />

                <TextView
                    android:id="@+id/txtborrower"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_weight="0.5"
                    android:ellipsize="end"
                    android:letterSpacing="0.02"
                    android:lineSpacingExtra="@dimen/_1pxh"
                    android:singleLine="true"
                    android:text="proyst592Four}" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearRowaddresstwoFour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_1pxh"
                android:layout_marginTop="@dimen/_5pxv"
                android:layout_marginEnd="@dimen/_1pxh"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtAddressTwoFour"
                    style="@style/txtInterregular12"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_weight="0.5"
                    android:ellipsize="end"
                    android:letterSpacing="0.02"
                    android:lineSpacingExtra="@dimen/_1pxh"
                    android:singleLine="true"
                    android:text="Borrowed Time" />

                <TextView
                    android:id="@+id/txtborrowtime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_weight="0.5"
                    android:ellipsize="end"
                    android:letterSpacing="0.02"
                    android:lineSpacingExtra="@dimen/_1pxh"
                    android:singleLine="false"
                    tools:text="profileAdFive" />
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>